<Window x:Class="RresourcepackStudio.Windows.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RresourcepackStudio.Windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        
        Title="WindowMain" Height="700" Width="1200" ui:WindowHelper.UseModernWindowStyle="True" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!--菜单-->
        <Menu DockPanel.Dock="Top" VerticalAlignment="Top" Background="#0C000000" Height="32">
            <MenuItem Header="文件">
                <MenuItem Header="新建" Click="MenuItem_New_Click" />
                <MenuItem Header="打开"/>
                <MenuItem Header="另存为..."/>
                <Separator/>
                <MenuItem Header="退出"/>
            </MenuItem>
        </Menu>

        <!--主要区域-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!--文件浏览器-->
            <Grid Grid.Column="0">
                <TreeView x:Name="treeView_Main"/>
            </Grid>

            <!--主区域-->
            <Grid Grid.Column="1">
            </Grid>

            <!--属性区-->
            <Grid Grid.Column="2">
            </Grid>

            <!--滑动条-->
            <GridSplitter Grid.Column="0" Width="2" Cursor="SizeWE"/>
            <GridSplitter Grid.Column="1" Width="2" Cursor="SizeWE"/>
        </Grid>
    </DockPanel>
</Window>
