<Window x:Class="RresourcepackStudio.Windows.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RresourcepackStudio.Windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:icons="clr-namespace:RresourcepackStudio.Controls.Icons"
        mc:Ignorable="d"
        
        Title="WindowMain" Height="700" Width="1200" MinWidth="520" MinHeight="400" ui:WindowHelper.UseModernWindowStyle="True" WindowStartupLocation="CenterScreen" Icon="/Assets/Icon/Icon.ico">
    <Grid>
        <!--菜单-->
        <Menu VerticalAlignment="Top" Background="#0C000000" Height="32">
            <MenuItem Header="文件">
                <MenuItem Header="新建" Click="MenuItem_New_Click" />
                <MenuItem Header="打开" Click="MenuItem_Open_Click"/>
                <Separator/>
                <MenuItem Header="退出" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="关于 Resourcepack Studio" Click="MenuItem_About_Click" />
            </MenuItem>
        </Menu>

        <!--背景-->
        <Grid>
            <icons:IconApplicationBaw Opacity="0.5" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100"/>
            <TextBlock Opacity="0.5" Text="Resourcepack Studio" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Margin="0,150,0,0"/>
        </Grid>

        <!--主要区域-->
        <Grid x:Name="grid_Main" Margin="0,32,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!--文件浏览器-->
            <Grid Grid.Column="0">
                <TextBlock Text="文件浏览器" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="15"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                    <Button x:Name="button_NewFile" BorderBrush="{x:Null}">
                        <icons:IconFileAdd Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="button_NewFolder" BorderBrush="{x:Null}">
                        <icons:IconFolderAdd Width="20" Height="20"/>
                    </Button>
                </StackPanel>
                
                <TreeView x:Name="treeView_Main" Margin="0,40,0,0" SelectedItemChanged="treeView_Main_SelectedItemChanged"/>
            </Grid>

            <!--主区域-->
            <Grid Grid.Column="1">
            </Grid>

            <!--属性区-->
            <Grid Grid.Column="2">
            </Grid>

            <!--滑动条-->
            <GridSplitter Grid.Column="0" Width="2" Cursor="SizeWE"/>
            <GridSplitter Grid.Column="1" Width="2" Cursor="SizeWE"/>
        </Grid>
    </Grid>
</Window>
